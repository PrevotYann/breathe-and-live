<form class="bl item-technique flexcol" autocomplete="off">
  <header class="sheet-header flexrow">
    <img class="profile" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="charname">
        <input name="name" type="text" value="{{item.name}}" placeholder="Nom de la Technique"/>
      </h1>
      <div class="flexrow gap">
        <div class="field small">
          <label>Souffle</label>
          <input type="text" name="system.breath" value="{{system.breath}}" placeholder="Eau / Soleil..."/>
        </div>
        <div class="field tiny">
          <label>Forme</label>
          <input type="number" name="system.form" value="{{system.form}}" min="1"/>
        </div>
      </div>
    </div>
  </header>

  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="stats">Données</a>
    <a class="item" data-tab="tags">Tags</a>
    <a class="item" data-tab="desc">Description</a>
  </nav>

  <section class="sheet-body">
    <div class="tab" data-group="primary" data-tab="stats">
      <div class="grid">
        <label>Coût Endurance (E)</label>
        <input type="number" name="system.costE" value="{{system.costE}}" min="0"/>

        <label>Dégâts</label>
        <input type="text" name="system.damage" value="{{system.damage}}" placeholder="ex: 2d8+2"/>

        <label>Portée (m)</label>
        <input type="number" name="system.range" value="{{system.range}}" min="0" step="0.5"/>

        <label>Stat d’attaque (optionnel)</label>
        <input type="text" name="system.attackStat" value="{{system.attackStat}}" placeholder="vitesse / finesse ..."/>
      </div>
    </div>

    <div class="tab" data-group="primary" data-tab="tags">
      <textarea name="system.tagsText" rows="3" placeholder="tags séparés par des virgules (auto-sync dans system.tags)">{{join system.tags ", "}}</textarea>
      <p class="hint">Les tags saisis ici sont synchronisés avec <code>system.tags</code>.</p>
    </div>

    <div class="tab" data-group="primary" data-tab="desc">
      {{editor system.description target="system.description" button=true owner=owner editable=editable}}
    </div>
  </section>
</form>
